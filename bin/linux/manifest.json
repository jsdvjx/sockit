{
    "name": "SockIt",
    "version": "0.0.2.0",
    "description": "Allows Javascript to make network system calls.",
    "plugins":[ {"path": "npSockIt.so", "public": true} ],
    "permissions": ["http://<all_urls>, https://<all_urls>, file://<all_urls>"],
    "browser_action": {
        "default_title": "SockIt",
        "default_icon": "chrome/icon.png",
        "default_popup": "chrome/sockit.html"
    }
}
